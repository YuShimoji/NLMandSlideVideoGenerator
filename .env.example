# 環境設定ファイルのテンプレート
# 使用方法: このファイルを .env にコピーして、実際の値を設定してください

# アプリケーション設定
DEBUG=false
LOG_LEVEL=INFO

# Google AI Studio Gemini API 設定
GEMINI_API_KEY=your_gemini_api_key_here

# YouTube API 設定
YOUTUBE_API_KEY=your_youtube_api_key_here
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here

# Google API 設定（Slides用）
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# 音声生成API設定
# ElevenLabs
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Azure Speech Services
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_azure_region_here

# Google Cloud TTS
GOOGLE_CLOUD_TTS_KEY=your_google_cloud_tts_key_here

# データベース設定
DATABASE_URL=sqlite:///./nlm_video_generator.db

# Redis設定
REDIS_URL=redis://localhost:6379/0

# セキュリティ設定
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# 外部サービス設定
WEBHOOK_SECRET=your_webhook_secret_here

# プロジェクト設定
PROJECT_NAME=NLMandSlideVideoGenerator
OUTPUT_DIR=./data/output
TEMP_DIR=./data/temp
