<Window x:Class="NLMSlidePlugin.TimelinePlugin.CsvImportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CSVタイムラインインポート" 
        Width="600" Height="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- CSVファイル選択 -->
        <GroupBox Grid.Row="0" Header="CSVファイル" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="CsvPathTextBox" Grid.Column="0" IsReadOnly="True" 
                         Text="{Binding CsvPath, Mode=TwoWay}"/>
                <Button x:Name="BrowseCsvButton" Grid.Column="1" Content="参照..." 
                        Margin="5,0,0,0" Padding="15,3" Click="BrowseCsvButton_Click"/>
            </Grid>
        </GroupBox>

        <!-- 音声ディレクトリ -->
        <GroupBox Grid.Row="1" Header="音声ファイルディレクトリ" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="AudioDirTextBox" Grid.Column="0" IsReadOnly="True"
                         Text="{Binding AudioDirectory, Mode=TwoWay}"/>
                <Button x:Name="BrowseAudioButton" Grid.Column="1" Content="参照..." 
                        Margin="5,0,0,0" Padding="15,3" Click="BrowseAudioButton_Click"/>
            </Grid>
        </GroupBox>

        <!-- オプション -->
        <GroupBox Grid.Row="2" Header="インポートオプション" Margin="0,0,0,10">
            <StackPanel Margin="5">
                <CheckBox x:Name="AddSubtitlesCheckBox" Content="字幕を追加"
                          IsChecked="{Binding AddSubtitles, Mode=TwoWay}"/>
                <CheckBox x:Name="OverwriteExistingCheckBox" Content="既存アイテムを上書き"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- プレビュー -->
        <GroupBox Grid.Row="3" Header="プレビュー" Margin="0,0,0,10">
            <DataGrid x:Name="PreviewDataGrid" AutoGenerateColumns="False" 
                      IsReadOnly="True" GridLinesVisibility="Horizontal">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="行" Binding="{Binding LineNumber}" Width="40"/>
                    <DataGridTextColumn Header="話者" Binding="{Binding Speaker}" Width="100"/>
                    <DataGridTextColumn Header="テキスト" Binding="{Binding Text}" Width="*"/>
                    <DataGridTextColumn Header="音声" Binding="{Binding AudioFileName}" Width="80"/>
                    <DataGridTextColumn Header="長さ" Binding="{Binding Duration, StringFormat={}{0:F1}s}" Width="60"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- ステータス -->
        <TextBlock x:Name="StatusTextBlock" Grid.Row="4" Text="{Binding StatusMessage}" 
                   Margin="0,5" TextWrapping="Wrap"/>

        <!-- ボタン -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="PreviewButton" Content="プレビュー" Padding="20,5" 
                    Margin="0,0,10,0" Click="PreviewButton_Click"/>
            <Button x:Name="ImportButton" Content="インポート" Padding="20,5" 
                    IsDefault="True" Click="ImportButton_Click"/>
            <Button x:Name="CancelButton" Content="キャンセル" Padding="20,5" 
                    Margin="10,0,0,0" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
